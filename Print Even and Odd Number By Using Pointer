#include <stdio.h>

int main() {
    int arr[] = {12, 7, 5, 8, 9, 22, 3, 15};
    int size = sizeof(arr) / sizeof(arr[0]);
    int *ptr = arr;

    printf("Even numbers: ");
    for (int i = 0; i < size; i++) {
        if (*(ptr + i) % 2 == 0) {
            printf("%d ", *(ptr + i));
        }
    }

    printf("\nOdd numbers: ");
    for (int i = 0; i < size; i++) {
        if (*(ptr + i) % 2 != 0) {
            printf("%d ", *(ptr + i));
        }
    }

    return 0;
}
